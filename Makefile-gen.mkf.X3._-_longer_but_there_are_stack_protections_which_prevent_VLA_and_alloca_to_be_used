SRC_C   := $(patsubst src/%.c,%,$(wildcard src/*.c))
SRC_H   := $(patsubst src/%.h,%,$(wildcard src/*.h))
#SRC_Y  := $(patsubst src/%.y,%,$(wildcard src/*.y))
SRC_Y   := $(patsubst src/%.y,%.tab,$(wildcard src/*.y)) $(patsubst src/%.y,%.code,$(wildcard src/*.y))
